{
  "name": "didor-docs",
  "version": "0.1.0",
  "description": "Herramienta para documentar tus proyectos",
  "author": "Francisco Vena <fvena32@gmail.com>",
  "license": "MIT",
  "keywords": [
    "template",
    "javascript",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fvena/didor-docs"
  },
  "homepage": "https://github.com/fvena/didor-docs",
  "bugs": "https://github.com/fvena/didor-docs/issues",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "svg": "vsvg -s ./src/assets/icons/svg -t ./src/assets/icons/sprite"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "clipboard": "^2.0.8",
    "codemirror": "^5.59.4",
    "js-yaml": "^4.0.0",
    "markdown-it": "^12.0.4",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-block-embed": "^0.0.3",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-div": "^1.1.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-regex": "^0.2.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-toc-and-anchor": "^4.2.0",
    "moment": "^2.29.1",
    "vue": "^3.0.5",
    "vue-observe-visibility": "^1.0.0",
    "vue-router": "4",
    "vue3-runtime-template": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.7.0",
    "husky": "^5.1.3",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pug": "^3.0.2",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.19.0",
    "vite": "^2.0.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{css,scss,vue}": "stylelint --fix",
    "*.js": "eslint --fix --debug",
    "*": "prettier -w -u",
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.spec.js"
    ],
    "transform": {
      ".*\\.(js)$": "babel-jest"
    },
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  }
}
